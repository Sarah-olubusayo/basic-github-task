			"item": [
				{
					"name": "Get All Todo Entries",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Response status code is 200\", function () {\r",
									"pm.environment.get(\"variable_key\");\r",
									"    pm.expect(pm.response.code).to.equal(200);\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Response time is within an acceptable range\", function () {\r",
									"  pm.expect(pm.response.responseTime).to.be.below(500);\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Response has the required fields\", function () {\r",
									"    const responseData = pm.response.json();\r",
									"\r",
									"    pm.expect(responseData).to.be.an('object');\r",
									"    pm.expect(responseData).to.include.all.keys('apiVersion', 'title', 'paymentCurrency', 'categories', 'scopes', 'links');\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Categories and scopes must be non-empty arrays\", function () {\r",
									"  const responseData = pm.response.json();\r",
									"  \r",
									"  pm.expect(responseData).to.be.an('object');\r",
									"  pm.expect(responseData.categories).to.be.an('array').and.to.have.lengthOf.at.least(1, \"Categories should not be empty\");\r",
									"  pm.expect(responseData.scopes).to.be.an('array').and.to.have.lengthOf.at.least(1, \"Scopes should not be empty\");\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Links array contains objects with non-empty rel and href properties\", function () {\r",
									"    const responseData = pm.response.json();\r",
									"    \r",
									"    pm.expect(responseData.links).to.be.an('array');\r",
									"    responseData.links.forEach(function(link) {\r",
									"        pm.expect(link).to.be.an('object');\r",
									"        pm.expect(link.rel).to.exist.and.to.have.lengthOf.at.least(1, \"Rel property should not be empty\");\r",
									"        pm.expect(link.href).to.exist.and.to.have.lengthOf.at.least(1, \"Href property should not be empty\");\r",
									"    });\r",
									"});\r",
									"pm.test(\"Response time is less than 200ms\", function () {\r",
									"  pm.expect(pm.response.responseTime).to.be.below(200);\r",
									"});"
								],
								"type": "text/javascript",
